@{
    ViewData["Title"] = "Names Greeted";
}

@model GreetingsInCSharp.Models.GreetingsModel;

<div class="text-center">
    <h1 class="display-4"> @ViewData["Title"]</h1>
    <table class="table table-primary table-striped table-hover">
        <br>
        <br>
        <tr>
        <th scope="col">Name</th>
        <th scope="col">Action</th>
        </tr>
        @foreach (var item in GreetingsModel.namesList)
        {
            <tr class="table-secondary">
                <td scope="col"><a asp-controller="Home" asp-action="GreetsCount">@Html.DisplayFor(Model => item.Key)</a></td>
                <td scope="col"><button class="btn btn-danger btn-sm">Remove</button></td>
            </tr>
        }
    </table>
</div>



