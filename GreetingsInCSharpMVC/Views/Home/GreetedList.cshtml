@{
    ViewData["Title"] = "Names Greeted";
}

@model GreetingsInCSharp.Models.GreetingsModel;

<div class="text-center">
    <h1 class="display-4"> @ViewData["Title"]</h1>
    <table class="table table-primary table-striped table-hover">
        <br>
        <p id="namesListSuccessMessage" class="text-success">@Html.DisplayFor(model => model.SecondPageSuccessMessage)</p>
        <br>
        <tr>
        <th scope="col">Name</th>
        <th scope="col">Action</th>
        </tr>
        @foreach (var item in Model.GetNamesList)
        {
            <tr class="table-secondary">
                <td scope="col"><a asp-controller="Home" asp-action="GreetsCountForName" asp-route-id="@item.Key" >@Html.DisplayFor(Model => item.Key)</a></td>
                <td scope="col"><a asp-controller="Home" asp-action="RemoveName" asp-route-id="@item.Key"> <button class="btn btn-danger btn-sm">Remove</button> </a></td>
            </tr>
        }
    </table>
</div>



